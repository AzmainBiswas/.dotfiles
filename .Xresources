! Font options - ~/.fonts.conf seems to override this
! Resolution for Xft in dots per inch (e.g. 96)
Xft.dpi:       115
! Type of subpixel antialiasing (none, rgb, bgr, vrgb or vbgr)
Xft.rgba:      rgb
Xft.antialias: true
Xft.hinting:   false
Xft.autohint:  true
! What degree of hinting to use (hintnone, hintslight, hintmedium, or hintfull)
Xft.hintstyle: hintslight

! Sxiv
! --------
Sxiv.background: #282828
Sxiv.foreground: #8ec07c
Sxiv.font: IosevkaTerm Nerd Font:size=13

! courser
! --------
Xcursor.theme: Yaru
Xcursor.size: 20
