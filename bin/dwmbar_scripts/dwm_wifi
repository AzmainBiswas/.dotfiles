#!/usr/bin/env bash
# wifi for dwm_bar
msg=""

dwm_wifi() {
    connected=$(nmcli d | grep "wlan0" | awk '{ print $3}')
    wifi_name=$(nmcli d | grep "wlan0" | awk '{ print $NF }')
    
    if [[ $connected = "connected" ]]; then
        msg="ðŸ›œ ${wifi_name}"
    else
        msg="ðŸ”´ $connected"
    fi
}

dwm_wifi

printf "%s" "${msg}"
