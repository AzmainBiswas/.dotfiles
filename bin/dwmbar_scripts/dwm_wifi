#!/usr/bin/env bash
# wifi for dwm_bar
msg=""

dwm_wifi() {
    nmcli_output=$(nmcli -t -f DEVICE,TYPE,STATE,CONNECTION d | grep "wifi")
    connected=$(echo ${nmcli_output} | cut -d: -f3)
    wifi_name=$(echo ${nmcli_output} | cut -d: -f4)
    
    if [[ $connected = "connected" ]]; then
        msg="ðŸ›œ ${wifi_name}"
    else
        msg="ðŸ”´ $connected"
    fi
}

dwm_wifi

printf "%s" "${msg}"
